<link rel="stylesheet" href="css/app.css">
    <div class="px-8 py-4 mx-auto bg-white rounded-lg shadow-md dark:bg-gray-800" style="cursor: auto; width: 400px; margin-top: 50px; margin-bottom: 50px;">
        <div class="mt-2">
          <a href="/event/<%= event._id %>" class="text-2xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline"><%= event.title %></a> 
          <form action="/" method="post" class="mt-2 text-gray-600 dark:text-gray-300"><label for="suggestText">Name your vote</label>
            <div><b>If you want to add an answer, please submit here:</b></div>
            <input type="text" id="suggestText" placeholder="Describe your vote">
            <div>Pick your vote:</div>
            <% for (var i = 0; i < event.options.length; i++) { %>
                <input type="radio" name="radiovote"  value=<%= event.options[i] %> 
                <label for="event.options[i]" class="text-blue-600 dark:text-blue-400 hover:underline"><%= event.options[i] %></label>
            <% } %> 
            </br>
            <input type="submit" value="submit">
        </form>
        </div> 
    </div>