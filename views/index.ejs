<h1>Hello, this is the home page here we would ask all the possible ids and show them here!</h1>
<!-- Creating a form where action will 
    be on "/" and the method will be "POST" -->
<form id ="eventCreation" action="/Events" method="POST">
    <fieldset>
        <legend>Create a new event</legend>        
        <div class="form-control">
            <label for="eventTitle">Event title:</label><br>
            <input type="text" name="title" placeholder="title"required>
        </div>
        <div class="form-control">
            <label for="eventDescription">Description:</label><br>
            <input type="text" name="description" placeholder="description"required>
        </div>
        <br/>
        <br/>
        <div class="form-control">
            <label for="eventDate">Date:</label><br>
            <input type="date" name="date" placeholder="date"required>
        </div>
        <br/>
        <div class="form-control">
            <label for="eventOption">Options:</label><br>
            <input type="text" name="options" placeholder="options"required>
        </div>
        <br/>
        <input type="submit" value="Submit" class ="submit-button"/>
    </fieldset>
</form>
